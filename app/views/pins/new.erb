<div class="header">
  <h1>Pin a New Resource to the Board!</h1>
</div>
<div class="pin">
<%= form_for @pin do |f| %>
  <label for="pin_title">Title</label>
  <%= f.text_field :title %>

  <label for="pin_category_id">Category</label>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %>

  <label for="pin_url">URL</label>
  <%= f.text_field :url %>

<% end %>
</div>

<%= form_for @pin do |f| %>
  <%= f.submit %>
<% end %>
